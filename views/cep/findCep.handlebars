<h1>Encontrar CEP</h1>

<div id="form-total">
    <form action="/findCep" method="POST">
        <div class="form-control">
            <input type="text" name="uf" placeholder="Digite a UF" maxlength="2">
        </div>
        
        <div class="form-control">
            <input type="text" name="cidade" placeholder="Digite a Cidade" minlength="3">
        </div>

        <div class="form-control">
            <input type="text" name="rua" placeholder="Digite a Rua" minlength="3">
        </div>

        <input type="submit" value="Buscar" class="btn">
    </form>
</div>